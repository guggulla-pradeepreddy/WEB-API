            </tr>
        </table>
    </div>


}
<script type="text/javascript">

    function AllCarDetails() {
        $.ajax({
            type: "GET",
            url: "http://localhost:10148/api/Cardetails", //URI

            dataType: "json",
            success: function (data) {
                //debugger;
                console.log(data);
                var datavalue = data;
                var myJsonObject = datavalue;
                contentType: "application/json";
                $.each(myJsonObject, function (i, mobj) {
                    console.log(mobj);
                    $("#Cartb1").append('<tr><td width="50px">' + mobj.CarName +
                     '</td><td width="50px">' + mobj.CarModel +
                    '</td><td width="50px">' + mobj.CarPrice +
                    '</td>' + '</td><td width="50px">'
                      + mobj.CarColor + '</td></tr>');

                });

            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
    }
    function PostData() {

        var cardetails =
       {
           CarName: "Ertiga",
           CarModel: "LXI",
           CarPrice: "5000000",
           CarColor: "blue"
       };

        $.ajax({
            type: "POST",
            data: JSON.stringify(cardetails),
            url: "http://localhost:10148/api/Cardetails",
            dataType: "json",
            contentType: "application/json",
        });

    }
    function PutData() {

        var cardetails =
